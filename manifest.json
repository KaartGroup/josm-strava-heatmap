{
  "manifest_version": 2,
  "name": "JOSM Strava Heatmap",
  "description": "Add a button to the Strava Global Heatmap that copies the TMS imagery url for use in JOSM (Java OpenStreetMap Editor)",
  "version": "1",
  "icons": {
    "48": "icons/icon.png"
  },
  "permissions": [
    "cookies",
    "*://*.strava.com/*",
    "clipboardWrite"
  ],
  "content_scripts": [{
    "matches": ["*://*.strava.com/heatmap*"],
    "js": [
      "browser-polyfill.min.js",
      "content.js"
    ],
    "css": [
      "content.css"
    ]
  }],
  "background": {
    "scripts": [
      "browser-polyfill.min.js",
      "background.js"
    ]
  }
}
